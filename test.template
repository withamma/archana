<div class="test-bg" ng-hide="state === 'end'"> </div>
<div class="overlay" ng-hide="state === 'end'"> </div>
<img src="img/creator.jpg" width="100%" alt="Finished" ng-click="showResults()" ng-show="state === 'end'">

<!-- Navbar -->
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">{{title}}</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
<!--         <li>
          <a ng-click="showAnswer()">Toggle Meaning</a>
        </li> -->
        <li>
          <a ng-click="restart()">Restart</a>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <h3 class="text-center noselect question" ng-hide="state === 'end'" ng-bind-html="linkPrevious()"> </h3>
    </div>
  </div>
  <div class="row clearfix">
    <div class="col-md-12 column">
      <h3 class="text-center noselect answer" ng-hide="state === 'end'" ng-bind-html="linkTest()"> </h3>
    </div>
  </div>
</div>

<!-- Answer Buttons -->
<div class="row clearfix fixed-footer">
  <div class="col-md-12 column" ng-show="state === 'show'">
    <button type="button" class="btn btn-lg btn-warning" ng-click="showAnswer()">Show Answer</button>
  </div>
  <div class="col-md-12 column" ng-show="state === 'end'">
    <button type="button" class="btn btn-lg btn-warning" ng-click="showResults()">Show Results</button>
  </div>
</div>
<div class="row clearfix fixed-footer" ng-show="state === 'answer'">
  <div class="col-xs-6 column">
    <button type="button" class="btn btn-lg btn-danger" ng-click="submitAnswer('incorrect')"><i class="fa fa-times"></i></button>
  </div>
  <div class="col-xs-6 column">
    <button type="button" class="btn btn-lg btn-success" ng-click="submitAnswer('correct')"><i class="fa fa-check "></i></button>
  </div>
</div>